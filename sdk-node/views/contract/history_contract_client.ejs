  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Thông tin hợp đồng
        </h1>
           
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Default box -->
        <div class="box">
            <div class="container-fluid">
                <h4> Application Request </h4>
                <div class="form-group">
                    <label for="name-app" class="col-md-4 control-label">Name</label>
                    <%= product.app_request.name %>
                </div>
                <div class="form-group">
                    <label for="company-app" class="col-md-4 control-label">Company Name</label>
                    <%= product.app_request.company_name %>
                </div>
                <div class="form-group">
                    <label for="iban-app" class="col-md-4 control-label" >IBan</label>
                    <%= product.app_request.i_ban %>
                </div>
                <div class="form-group">
                    <label for="code-app" class="col-md-4 control-label" >Swift Code</label>
                    <%= product.app_request.swift_code %>
                </div>
                <div class="form-group">
                    <label for="bank-name-app" class="col-md-4 control-label" >Bank Name</label>
                    <%= product.app_request.bank_name %>
                </div>

                <h4> Supplier Request </h4>
                <div class="form-group">
                    <label for="name-sub" class="col-md-4 control-label">Name</label>
                    <%= product.sub_request.name %>
                </div>
                <div class="form-group">
                    <label for="company-sub" class="col-md-4 control-label">Company Name</label>
                    <%= product.sub_request.company_name %>
                </div>
                <div class="form-group">
                    <label for="iban-sub" class="col-md-4 control-label" >IBan</label>
                    <%= product.sub_request.i_ban %>
                </div>
                <div class="form-group">
                    <label for="code-sub" class="col-md-4 control-label" >Swift Code</label>
                    <%= product.sub_request.swift_code %>
                </div>
                <div class="form-group">
                    <label for="bank-name-sub" class="col-md-4 control-label" >Bank Name</label>
                    <%= product.sub_request.bank_name %>
                </div>

                <h4> Thông tin sản phẩm </h4>
                <div class="form-group">
                    <label for="name" class="col-md-4 control-label">Tên sản phẩm</label>
                     <%= product.product.name %>
                </div>
                <div class="form-group">
                    <label for="price" class="col-md-4 control-label">Giá sản phẩm</label>
                    <%= product.product.price %>
                </div>
                <div class="form-group">
                    <label for="total" class="col-md-4 control-label" >Tổng tiền</label>
                    <%= product.product.total_price %>
                </div>
                
                <div style="display: inline;">
                  <a href="/update-status-seller-reject/<%= product.product.ref_id %>"><h4>Reject</h4></a>
                  <a href="/update-status-seller-accept/<%= product.product.ref_id %>"><h4>Accept</h4></a>
              </div>
            </div>
        </section>

</div>
