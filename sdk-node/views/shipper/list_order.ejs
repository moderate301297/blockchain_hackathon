  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <h1 style='font-size:30px; margin-top: 10px'>
            Danh sách đơn hàng
        </h1>
        <table style="with:100%; margin-top: 15px" >
                <thead>
                  <th style="padding:0 40px;">ID sản phẩm</th>
                  <th style="padding:0 40px;">Tên sản phẩm</th>
                  <th style="padding:0 40px;">Giá sản phẩm </th>
                  <th style="padding:0 40px;">Tổng tiền </th>
                  <th style="padding:0 40px;">Trạng thái</th>
                </thead>
                <tbody>
                    <% products.forEach(function(value) { %>
                    <tr>
                        <td style="padding:2px 40px;">
                            <%= value.product.ref_id %>
                        </td>
                        <td style="padding:2px 40px;">
                            <%= value.product.name %>
                        </td>
                        <td style="padding:2px 40px;">
                            <%= value.product.price %>
                        </td>
                        <td style="padding:2px 40px;">
                            <%= value.product.total_price %>
                        </td>
                        <td style="padding:2px 40px;">
                            <% if(value.seller.shipped == "await" && value.order.name == '' ) { %>
                                New - 
                                <a href="/update-order/<%= value.product.ref_id %>">- Cập nhật</a>
                            <% } else if(value.seller.shipped == "await" && value.order.name != '' && value.seller.status != "shipped" ){ %>
                                Awaitting approval from seller
                            <% } else if(value.seller.shipped == "await" && value.seller.status == "shipped" ) { %>
                              <a href="/update-seller-shipped/<%= value.product.ref_id %>">Giao hàng</a>
                            <% } else if(value.seller.shipped == "success" && value.seller.status == "shipped"){ %>
                                Success
                            <% } else { %>
                                Closed
                            <% } %>
                        </td>

                    </tr>
                    <% }); %>
                    </tbody>
              </table>  
    </section>

